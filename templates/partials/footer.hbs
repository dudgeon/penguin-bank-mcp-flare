<footer id="{{footer.section_id}}" class="bg-gray-900 text-gray-400 py-12 px-4 text-center">
    <div class="max-w-5xl mx-auto">
        <div class="flex justify-center gap-8 mb-8 flex-wrap">
            {{#each footer.links}}
            <a href="{{this.href}}" class="text-gray-400 hover:text-white transition-colors duration-200">{{this.text}}</a>
            {{/each}}
        </div>
        <p>{{footer.copyright}}</p>
    </div>
</footer> 